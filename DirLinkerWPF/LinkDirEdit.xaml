<Window x:Class="DirLinkerWPF.LinkDirEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DirLinkerWPF"
        mc:Ignorable="d"
        Title="Edit Directory Entry..." Height="100" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" >
            <TextBlock Text="Directory Path:" />
            <TextBox Text="{Binding Directory}" VerticalAlignment="Bottom" />
        </StackPanel>
        <Button Grid.Row="1" Content="OK" Click="Button_OK" />
    </Grid>
</Window>
